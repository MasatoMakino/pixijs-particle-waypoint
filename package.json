{
  "name": "@masatomakino/pixijs-particle-waypoint",
  "version": "0.6.0",
  "description": "Particle waypoint module for pixi.js",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "module": "./esm/index.js",
  "files": [
    "lib",
    "esm"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://MasatoMakino@github.com/MasatoMakino/pixijs-particle-waypoint.git"
  },
  "author": "MasatoMakino <unagiinu.g@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@masatomakino/gulptask-demo-page": "^0.6.1",
    "@tweenjs/tween.js": "^18.6.4",
    "@types/node": "^18.15.3",
    "browser-sync": "^2.29.0",
    "husky": "^8.0.3",
    "lil-gui": "^0.18.1",
    "pixi.js": "^7.2.0",
    "prettier": "^2.8.4",
    "pretty-quick": "^3.1.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@masatomakino/particle-waypoint": "^0.6.0"
  },
  "peerDependencies": {
    "@tweenjs/tween.js": ">=18.5.0 <19.0.0",
    "pixi.js": ">=7.2.0 <8.0.0"
  },
  "scripts": {
    "prepare": "husky install",
    "start:dev": "npm run server & npm run watch:tsc & npm run watch:demo",
    "build": "npm run buildTS && npm run demo",
    "demo": "npx @masatomakino/gulptask-demo-page",
    "buildTS": "tsc --project tsconfig.json & tsc --project tsconfig.esm.json",
    "typedocs": "npx typedoc --out ./docs/api src/index.ts",
    "server": "browser-sync ./docs/demo -w",
    "watch:demo": "npm run demo -- -W",
    "watch:tsc": "tsc -W --incremental --project tsconfig.json & tsc -W --incremental --project tsconfig.esm.json"
  },
  "bugs": {
    "url": "https://github.com/MasatoMakino/pixijs-particle-waypoint/issues"
  },
  "homepage": "https://github.com/MasatoMakino/pixijs-particle-waypoint#readme",
  "directories": {
    "doc": "docs",
    "lib": "lib"
  }
